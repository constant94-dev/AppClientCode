<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/m_ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainWhite">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/main_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/main_logo"
            app:layout_constraintHeight_percent="0.0178"
            app:layout_constraintHorizontal_bias="0.0584"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintWidth_percent="0.2805" />


        <ImageView
            android:id="@+id/main_title"
            android:layout_width="248dp"
            android:layout_height="72dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="69dp"
            android:src="@drawable/main_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_logo" />


        <TextView
            android:id="@+id/main_move_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="24dp"
            android:gravity="end"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="41.3sp"
            android:text="혜택 조회하러 가기"
            android:textColor="#5d21d2"
            android:textSize="13.5sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_title" />

        <ImageView
            android:id="@+id/main_move_down"
            android:layout_width="17dp"
            android:layout_height="23dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/main_move_down"
            app:layout_constraintLeft_toRightOf="@+id/main_move_title"
            app:layout_constraintTop_toBottomOf="@+id/main_title" />

        <ImageView
            android:id="@+id/main_body"
            android:layout_width="370dp"
            android:layout_height="202dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/main_body"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_move_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6f52e8"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/main_body">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="54dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="16.8sp"
                android:text="당신이 관심있는 혜택은?"
                android:textColor="#ffffff"
                android:textSize="21.5sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_body" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="155dp"
                android:layout_height="141dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorGoogleBtn"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/job"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="33dp"
                    android:layout_marginRight="99dp"
                    android:layout_marginBottom="74dp"
                    android:src="@drawable/job"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="57dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="17dp"
                    android:text="취업·창업"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/job" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>