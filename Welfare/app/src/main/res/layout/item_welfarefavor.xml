    <TextView
        android:id="@+id/another_time_bottom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/millenniumbatang_regular"
        android:padding="10dp"
        android:text="2020. 11. 1 ~ 2021. 3. 31"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toRightOf="@+id/welfareRecommend_Top2Image"
        app:layout_constraintTop_toBottomOf="@+id/Recommend_title_bottom2" />


</androidx.constraintlayout.widget.ConstraintLayout>