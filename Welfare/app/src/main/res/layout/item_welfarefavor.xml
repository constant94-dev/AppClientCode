        android:textStyle="normal"
        app:layout_constraintLeft_toRightOf="@+id/welfareRecommend_Top2Image"
        app:layout_constraintTop_toBottomOf="@+id/Recommend_title_bottom" />

    <ImageView
        android:id="@+id/welfareRecommend_bottom2Image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/youthpoint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welfareRecommend_bottomImage" />

    <TextView
        android:id="@+id/Recommend_title_bottom2"
        android:layout_width="wrap_content"
