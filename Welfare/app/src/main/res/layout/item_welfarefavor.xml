<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp">


    <ImageView
        android:id="@+id/welfareRecommend_TopImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/youthpoint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Recommend_title_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/millenniumbatang_regular"
        android:padding="10dp"
        android:text="청년 복지 포인트"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/welfareRecommend_TopImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Recommend_time_Top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/millenniumbatang_regular"
        android:padding="10dp"
        android:text="2020. 11. 1 ~ 2021. 3. 31"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toRightOf="@+id/welfareRecommend_TopImage"
        app:layout_constraintTop_toBottomOf="@+id/Recommend_title_top" />

    <ImageView
        android:id="@+id/welfareRecommend_Top2Image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/youthpoint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welfareRecommend_TopImage" />

    <TextView
        android:id="@+id/Recommend_title_Top2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/millenniumbatang_regular"
        android:padding="10dp"
        android:text="청년 복지 포인트"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/welfareRecommend_Top2Image"
        app:layout_constraintTop_toTopOf="@+id/welfareRecommend_Top2Image" />

    <TextView
        android:id="@+id/Recommend_time_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/millenniumbatang_regular"
        android:padding="10dp"
        android:text="2020. 11. 1 ~ 2021. 3. 31"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toRightOf="@+id/welfareRecommend_Top2Image"
        app:layout_constraintTop_toBottomOf="@+id/Recommend_title_Top2" />

    <ImageView
        android:id="@+id/welfareRecommend_bottomImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/youthpoint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welfareRecommend_Top2Image" />

    <TextView
        android:id="@+id/Recommend_title_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/millenniumbatang_regular"
        android:padding="10dp"
        android:text="청년 복지 포인트"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/welfareRecommend_bottomImage"
        app:layout_constraintTop_toTopOf="@+id/welfareRecommend_bottomImage" />

    <TextView
        android:id="@+id/Recommend_time_bottom"
        android:layout_width="wrap_content"
