<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <gradient
        android:angle="270"
        android:endColor="#54A4FF"
        android:startColor="#54A4FF" />


    <!-- 겉 테두리 width 수치 증가할 수록 테두리가 두꺼워진다
     color 는 테두리 색-->
    <stroke
        android:width="2dp"
        android:color="#54A4FF" />
    <!-- 많이 사용하는 버튼 형태는 xml 코드에 따로 지정하지 않고
    미리 선언해 코드량을 줄일 수 있다 -->
    <size
        android:width="100dp"
        android:height="30dp" />
    <!-- 완만한 정도 수치가 높을 수록 버튼은 동그랗게 된다 -->
    <corners android:radius="3dp" />
</shape>